FROM quay.io/ascend/vllm-ascend:v0.10.2rc1-openeuler

ARG PIP_INDEX_URL="https://mirrors.tuna.tsinghua.edu.cn/pypi/web/simple"
ARG SOC_VERSION=Ascend910B3

ENV LMCACHE_TRACK_USAGE=false

RUN pip config set global.index-url ${PIP_INDEX_URL}

WORKDIR /workspace

COPY . /workspace/LMCache-Ascend/

# Install LMCache
RUN NO_CUDA_EXT=1 pip install lmcache==0.3.7

# Install LMCache-Ascend
RUN cd /workspace/LMCache-Ascend && \
    export CPLUS_INCLUDE_PATH=/usr/include/c++/12:/usr/include/c++/12/backward:/usr/include/c++/12/aarch64-openEuler-linux/:$CPLUS_INCLUDE_PATH && \
    export SOC_VERSION=${SOC_VERSION} && \
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/Ascend/ascend-toolkit/latest/`uname -i`-linux/devlib && \
    python3 -m pip install -v --no-build-isolation -e . && \
    python3 -m pip cache purge

CMD ["/bin/bash"]


